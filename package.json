{
	"name": "admin-dashboard",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"codegen:component": "tsx scripts/codegen-component.ts",
		"codegen:route": "tsx scripts/codegen-route.ts",
		"codegen:schema": "npx graphql-codegen --config codegen.ts",
		"codegen:schema:check": "npx graphql-codegen --config codegen.ts --check",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"pull-types": "VITE_API_BASE_URL=http://localhost:4000/api/v1 tsx src/scripts/pull-types.ts",
		"sync-types": "cd ../backend && npm run extract-types && cd ../admin-dashboard && npm run pull-types",
		"test:unit": "vitest",
		"typecheck": "tsc",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"story:dev": "histoire dev",
		"story:build": "histoire build",
		"story:preview": "histoire preview",
		"test:coverage": "vitest run --coverage",
		"test:integration": "playwright test",
		"test:e2e": "playwright test",
		"verify": "pnpm lint && pnpm typecheck && pnpm check"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.3",
		"@graphql-codegen/client-preset": "^4.5.1",
		"@graphql-codegen/typed-document-node": "^5.0.12",
		"@graphql-codegen/typescript": "^4.1.2",
		"@graphql-codegen/typescript-operations": "^4.4.0",
		"@graphql-codegen/typescript-resolvers": "^4.4.1",
		"@histoire/plugin-svelte": "^0.17.17",
		"@iconify/svelte": "^4.0.2",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@testing-library/user-event": "^14.5.2",
		"@types/eslint": "^9.6.0",
		"@types/jsonwebtoken": "^9.0.7",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"postcss": "^8.4.49",
		"postcss-preset-env": "^10.1.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"unplugin-icons": "^0.20.1",
		"vite": "^5.0.3",
		"vitest": "^2.0.4"
	},
	"dependencies": {
		"@tiptap/core": "^2.9.1",
		"@tiptap/starter-kit": "^2.9.1",
		"jsonwebtoken": "^9.0.2",
		"node-fetch": "^3.3.2"
	}
}
