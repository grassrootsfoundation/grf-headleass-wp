{
	"name": "admin-dashboard",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "pnpm sync-types && vite dev",
		"build": "pnpm sync-types && vite build",
		"clean": "rimraf dist",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"fetch:types": "VITE_API_BASE_URL=http://localhost:4000/api/v1 tsx src/scripts/fetch-types.ts",
		"fetch:schema": "VITE_API_BASE_URL=http://localhost:4000/api/v1 tsx src/scripts/fetch-schema.ts",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"preview": "vite preview",
		"sync-types": "cd ../backend && pnpm extract-types && cd ../admin-dashboard && pnpm fetch:types && pnpm fetch:schema",
		"typecheck": "tsc --noEmit",
		"test": "pnpm test:unit -- --run && pnpm test:e2e",
		"test:unit": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:integration": "playwright test",
		"test:e2e": "playwright test",
		"verify": "pnpm format && pnpm lint && pnpm typecheck && pnpm test"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^3.0.0",
		"@editorjs/editorjs": "^2.30.7",
		"@editorjs/embed": "^2.7.6",
		"@editorjs/header": "^2.8.8",
		"@editorjs/image": "^2.10.1",
		"@editorjs/list": "^2.0.2",
		"@editorjs/quote": "^2.7.6",
		"@eslint/js": "^9.17.0",
		"@fontsource-variable/sora": "^5.1.0",
		"@fontsource/almarai": "^5.1.0",
		"@iconify/svelte": "^4.1.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.12.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.2",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"@testing-library/user-event": "^14.5.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/eslint": "^9.6.1",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.10.2",
		"@typescript-eslint/eslint-plugin": "^8.18.1",
		"@typescript-eslint/parser": "^8.18.1",
		"autoprefixer": "^10.4.20",
		"cssnano": "^7.0.6",
		"editorjs-drag-drop": "^1.1.16",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"jsonwebtoken": "^9.0.2",
		"node-fetch": "^3.3.2",
		"postcss": "^8.4.49",
		"postcss-import": "^16.1.0",
		"postcss-nested": "^7.0.2",
		"postcss-preset-env": "^10.1.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.14.2",
		"svelte-check": "^4.1.1",
		"trusty-css": "^1.0.5",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1",
		"unplugin-icons": "^0.21.0",
		"vite": "^6.0.3",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
